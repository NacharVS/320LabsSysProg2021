@page "/"

@using BlazorApp.Data


<h1>Builder</h1>

How its work?

<div>
    <button type="button" class="btn btn-primary" @onclick="() => ModalTemplate.Open()">Click me! (Template)</button>
    <button type="button" class="btn btn-primary" @onclick="() => HelloWorldModal.Open()">Click me! (Modal)</button>
    <button type="button" class="btn btn-primary" @onclick="() => Aut.Open()">Click me! (Authorize)</button>
    <button type="button" class="btn btn-primary" @onclick="() => Reg.Open()">Click me! (Registrate)</button>
</div>

<ModalTemplate @ref="ModalTemplate"></ModalTemplate>

<HelloWorldModal @ref="HelloWorldModal"></HelloWorldModal>

<Authorize @ref="Aut"></Authorize>
<Registrate @ref="Reg"></Registrate>
@code
{
    public ModalTemplate ModalTemplate { get; set; }

    public HelloWorldModal HelloWorldModal { get; set; }

    public Authorize Aut { get; set; }

    public Registrate Reg { get; set; }
}