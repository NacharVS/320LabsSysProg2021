@page "/"
@using BlazorSer.Data

<div>
    <button type="button" class="btn btn-primary" @onclick="() => Authorization.Open()">Авторизация</button>
    <button type="button" class="btn btn-primary" @onclick="() => Registration.Open()">Регистриция</button>
</div>

<Authorization @ref="Authorization"></Authorization>

<Registration @ref="Registration"></Registration>

@code
{
    public Authorization Authorization { get; set; }

    public Registration Registration { get; set; }
}