<Window x:Class="DisplayData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DisplayData"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="Numbers" Background="Lavender" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
            <ListBoxItem Margin="3">
            </ListBoxItem>
        </ListBox>
        <Button Content="add" Grid.Column="0" Grid.Row="0" Click="Button_Click"/>
        <Button Content="clear" Grid.Column="1" Grid.Row="0" Click="Button_Click_1"/>

    </Grid>
</Window>
