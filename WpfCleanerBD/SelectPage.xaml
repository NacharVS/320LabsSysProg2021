<Page x:Class="WpfCleanerBD.SelectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfCleanerBD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectPage">

    <Grid Background="BlueViolet">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="text_All" Grid.Column="0" Grid.Row="1"/>
        <TextBlock x:Name="text_Cleaner" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="Select" Content="Select cleaner" Width="150" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1" Click="Select_Click"/>
        <Button x:Name="All" Content="All students" Width="150" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Click="All_Click"/>
    </Grid>
</Page>
