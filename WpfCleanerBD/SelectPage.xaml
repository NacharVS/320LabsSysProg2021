<Page x:Class="WpfCleanerBD.SelectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfCleanerBD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectPage">

    <Grid Background="BlueViolet">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Select" Content="Select cleaner" Width="150" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Click="Select_Click"/>
        <Button x:Name="All" Content="All students" Width="150" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Click="All_Click"/>
    </Grid>
</Page>
